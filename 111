class Solution {
public:
    bool isPalindrome(string s) {
        int l = 0;
        int r = s.size() - 1;
        while (l != r) {
            if (!('a' <= s[l] && s[l] <= 'z'))
                l++;
            else if (!('a' <= s[r] && s[r] <= 'z'))
                r--;
            else if (s[l] == s[r] || s[l]) {
                l++;
                r--;
            }
            else
                return false;
        }
        return true;
    }
};
